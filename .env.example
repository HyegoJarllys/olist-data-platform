# ============================================
# GOOGLE CLOUD PLATFORM
# ============================================
GCP_PROJECT_ID=seu-projeto-gcp
GCP_BUCKET_NAME=gs://seu-bucket-data-lake
GCP_DATASET_ID=crypto_analytics
GCP_SERVICE_ACCOUNT_KEY_PATH=/caminho/para/service-account.json

# ============================================
# BYBIT API
# ============================================
BYBIT_API_KEY=sua-api-key-bybit
BYBIT_API_SECRET=seu-api-secret-bybit
BYBIT_TESTNET=true

# ============================================
# TELEGRAM BOT
# ============================================
TELEGRAM_BOT_TOKEN=seu-telegram-bot-token
TELEGRAM_CHAT_ID=seu-chat-id

# ============================================
# AIRFLOW
# ============================================
AIRFLOW_HOME=/caminho/para/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_FOLDER=/caminho/para/airflow/dags

# ============================================
# DATABASE (Airflow metadata)
# ============================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================
# MLFLOW
# ============================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=sqlite:///ml/experiments/mlflow.db
MLFLOW_ARTIFACT_ROOT=./ml/experiments/mlruns

# ============================================
# VERTEX AI (Gemini)
# ============================================
VERTEX_AI_PROJECT=seu-projeto-gcp
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.0-flash-exp

# ============================================
# DATA SETTINGS
# ============================================
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,AVAXUSDT
TIMEFRAMES=5m,15m,1h
HISTORICAL_DAYS=730

# ============================================
# ML SETTINGS
# ============================================
MODEL_RETRAIN_SCHEDULE=0 2 * * 0
TARGET_THRESHOLD=0.01
LOOKFORWARD_CANDLES=12